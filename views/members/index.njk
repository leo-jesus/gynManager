{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Intructor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {%for instructor in instructors%}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar_url}})"></span>
                            {{instructor.name}}
                        </td>
                        <td>
                            <div>
                                {%set attendance = instructor.services.split(",")%}
                                {% for a in attendance %}
                                    <span>
                                        {{a}}
                                    </span>
                                {% endfor %}
                            </div>

                        </td>
                        <td>
                            <a href="/instructors/{{instructor.id}}">ver</a>
                        </td>
                    </tr>
                    {%endfor%}
                </tbody>

            </table>
        </div>

    {% endblock content %}