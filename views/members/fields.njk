<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ member.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" value="{{ member.name }}">
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" value="{{ member.email }}">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div><input type="date" name="birth" value="{{ member.birth }}"></div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" {% if member.gender == 'M' %} checked="checked" {% endif %}>Masculino</span>
        <span><input type="radio" name="gender" value="F" {% if member.gender == 'F' %} checked="checked" {% endif %}>Feminino</span>
    </div>
</div>

<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <select name="blood">
        <option value="A1">A+
            {%if member.blood == "A1"%}
                selected
                {%endif%}

            </option>

            <option value="A0">A-
                {%if member.blood == "A0"%}
                    selected
                    {%endif%}

                </option>

                <option value="B1">B+
                    {%if member.blood == "B1"%}
                        selected
                        {%endif%}

                    </option>

                    <option value="B0">B-
                        {%if member.blood == "B1"%}
                            selected
                            {%endif%}

                        </option>

                        <option value="AB1">AB+
                            {%if member.blood == "AB1"%}
                                selected
                                {%endif%}

                            </option>

                            <option value="AB0">AB-
                                {%if member.blood == "AB0"%}
                                    selected
                                    {%endif%}

                                </option>

                                {%if member.blood == "O1"%}
                                    selected
                                    {%endif%}
                                    <option value="O1">O+

                                    </option>

                                    {%if member.blood == "O0"%}
                                        selected
                                        {%endif%}
                                        <option value="O0">O-</option>
                                    </select>

                                </div>

                                <div class=" item">

                                    <div>Peso (Kg)</div>
                                    <div>
                                        <input type="number" name="weight" value="{{ member.wheight }}">

                                    </div>
                                </div>

                                <div class="item">

                                    <div>Altura (cm)</div>
                                    <div>
                                        <input type="number" name="height" value="{{ member.height }}">

                                    </div>
                                </div>
